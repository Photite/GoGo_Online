<view class="container"><scroll-view class="content" scroll-y="{{true}}"><block wx:for="{{posts}}" wx:for-item="post" wx:for-index="index" wx:key="index"><view class="post"><view class="post-header"><image class="avatar" src="{{post.avatar}}"></image><view class="user-info"><view class="user-name">{{post.userName+''}}<block wx:if="{{post.verified}}"><text class="verified">V</text></block></view><view class="user-details">{{post.details}}</view></view></view><view class="post-content">{{post.content}}</view><block wx:if="{{post.image}}"><image class="post-image" src="{{post.image}}"></image></block><view class="post-footer"><view class="icon-item"><text class="iconfont icon-share"></text><text>{{post.shares}}</text></view><view class="icon-item"><text class="iconfont icon-comment"></text><text>{{post.comments}}</text></view><view class="icon-item"><text class="iconfont icon-like"></text><text>{{post.likes}}</text></view></view></view></block></scroll-view></view>